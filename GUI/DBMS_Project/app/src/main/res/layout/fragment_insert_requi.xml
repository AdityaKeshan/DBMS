<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".requistion.InsertRequi">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/lin_insert_requi"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/requi_no"
                android:layout_marginBottom="10dp"
                android:maxLength="10"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Enter your Requistion No."
                android:inputType="number"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <EditText
                    android:id="@+id/quantity_requi_insert"
                    android:layout_width="wrap_content"
                    android:minWidth="50dp"
                    android:textAllCaps="true"
                    android:textAlignment="viewStart"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:hint="Enter quantity"
                    android:layout_height="wrap_content"
                    />
                <EditText
                    android:id="@+id/date_of_order_requi_insert"
                    android:layout_marginRight="10dp"
                    android:textAllCaps="true"
                    android:focusable="false"
                    android:hint="Enter Date"
                    android:layout_marginLeft="10dp"
                    android:textAlignment="viewStart"
                    android:layout_width="wrap_content"
                    android:minWidth="50dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <EditText
                android:id="@+id/recieved_requi_insert"
                android:layout_width="match_parent"
                android:minWidth="50dp"
                android:layout_marginTop="10dp"
                android:focusable="false"
                android:textAlignment="viewStart"
                android:hint="Enter Received Date"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                />
            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/ward_no_requi_insert"
                android:layout_width="match_parent"
                android:minWidth="50dp"
                android:hint="Enter Ward number"
                android:inputType="number"
                android:textAlignment="viewStart"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"

                android:maxLength="10"
                android:layout_height="wrap_content"
                />
            <EditText
                android:id="@+id/staff_id_requi_insert"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:minWidth="50dp"
                android:layout_marginLeft="10dp"
                android:inputType="number"
                android:layout_marginRight="10dp"
                android:hint="Enter Staff ID"
                android:textAlignment="viewStart"
                android:layout_height="wrap_content"
                />
            <EditText
                android:id="@+id/drug_id_requi_insert"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:minWidth="50dp"
                android:inputType="number"
                android:hint="Enter Drug ID"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textAlignment="viewStart"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/insert_requi_button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:text="INSERT"/>
    </RelativeLayout>

</FrameLayout>